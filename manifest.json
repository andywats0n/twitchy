{
  "manifest_version" : 2,
  "name": "twitchy",
  "description": "Quick view for your favorite twitch streamers.",
  "version": "1.0.0",
  "icons": { "128": "icon_128.png" },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "storage"]
}