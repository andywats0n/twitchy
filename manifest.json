{
  "manifest_version" : 2,
  "name": "twitchy",
  "description": "Quick view for your favorite twitch streamers.",
  "version": "1.0.0",
  "icons": {
    "16": "assets/icon_16.png",
    "19": "assets/icon_19.png",
    "32": "assets/icon_32.png",
    "56": "assets/icon_56.png",
    "96": "assets/icon_96.png",
    "128": "assets/icon_128.png",
    "256": "assets/icon_256.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "assets/icon_256.png",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "storage"]
}